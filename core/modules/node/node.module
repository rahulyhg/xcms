/**
 * Loads a node object.
 */
function node_load($nid) {
  $node = db_query('SELECT * FROM node WHERE nid = :nid', array(':nid' => $nid))->fetchObject();
  if ($node) {
    $node->data = unserialize($node->data);
  }
  return $node;
}

