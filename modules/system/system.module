/**
 * Implements hook_init().
 */
function system_init() {
  xcms_add_css('modules/system/system.css');
}

/**
 * Implements hook_menu().
 */
function system_menu() {

  $items['nocontent'] = array(
    'title' => 'Welcome',
    'callback' => 'system_welcome_page',
    'file' => 'modules/system/system.pages.inc',
    'access' => TRUE,
  );

  $items['install'] = array(
    'title' => 'install',
    'callback' => 'system_welcome_page',
    'file' => 'modules/system/system.pages.inc',
    'access' => TRUE,
  );

  return $items;
}

/**
 * Sets up a form to save information automatically.
 */
function system_settings_form($form) {
  $form['submit'] = array(
    'type' => 'submit',
    'value' => 'Save configuration',
  );
  $form['submit_callbacks'][] = 'system_settings_form_submit';
  return $form;
}

function system_settings_form_submit($form, &$form_state) {
  // TODO clean values remove "submit" key etc.
  // form_state_values_clean($form_state);
  foreach ($form_state['values'] as $key => $value) {
    variable_set($key, $value);
  }
  xcms_set_message('The configuration options have been saved.');
}
